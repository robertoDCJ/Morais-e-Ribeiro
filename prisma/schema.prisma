generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String?
}

model Post {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  text   String
  image  String
  datePublication String
  authorId String @db.ObjectId
  author   Member   @relation(fields: [authorId], references: [id])
}

model Member {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  profession  String
  location  String
  email  String
  linkedin  String
  image  String
  Post   Post[]
}

model Contact {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  subject String
  message String
  phone String?
  howFound String?
  otherText String?
  processNumber String?
}

